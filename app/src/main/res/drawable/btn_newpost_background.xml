<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/background_color" />
            <solid android:color="@color/colordefault" />
            <gradient android:angle="90" android:startColor="@color/colordefault" android:endColor="@color/colordefault"></gradient>
        </shape>
    </item>

    <item android:bottom="1dp">
        <shape
            android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/colordefault" />
            <solid android:color="#00000000" />
        </shape>
    </item>

</layer-list>