<?xml version="1.0" encoding="utf-8"?>
<LinearLayout app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:id="@+id/fragment_menu_bottom"
    android:layout_width="match_parent"
    android:layout_height="330dp"
    android:orientation="vertical"
    android:background="@drawable/bts_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="24dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:padding="8dp">
        <TextView
            android:layout_width="40dp"
            android:drawableLeft="@drawable/ic_edit_black_24dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/fragment_bottom_sheet_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            style="@style/headline6"
            android:textColor="@color/bottomsheettext"
            android:layout_marginLeft="8dp"
            android:text="Edit"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:padding="8dp">
        <TextView
            android:layout_width="40dp"
            android:drawableLeft="@drawable/ic_delete_24dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/fragment_bottom_sheet_delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            style="@style/headline6"
            android:textColor="@color/bottomsheettext"
            android:layout_marginLeft="8dp"
            android:text="Delete"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="180dp"
        >
        <TextView
            android:id="@+id/fragment_bottom_sheet_confirm_ok"
            android:layout_width="wrap_content"
            android:gravity="center"
            style="@style/headline6"
            android:textColor="@color/replyorange"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/fragment_bottom_sheet_confirm_no"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            style="@style/headline6"
            android:textColor="@color/bottomsheettext"
            android:layout_marginLeft="8dp" />
    </LinearLayout>
</LinearLayout>